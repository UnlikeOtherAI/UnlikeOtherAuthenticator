generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  SUPERUSER
  USER
}

enum VerificationTokenType {
  LOGIN_LINK
  VERIFY_EMAIL_SET_PASSWORD
  PASSWORD_RESET
  TWOFA_RESET
}

model User {
  id           String    @id @default(cuid())
  // Note: email is not globally unique because `user_scope` can be "per_domain".
  // Uniqueness is enforced via `user_key` instead (global: email, per_domain: domain|email).
  email        String
  userKey      String    @unique @map("user_key")
  domain       String?
  passwordHash String?   @map("password_hash")
  name         String?
  twoFaEnabled Boolean   @default(false) @map("2fa_enabled")
  twoFaSecret  String?   @map("2fa_secret")
  avatarUrl    String?   @map("avatar_url")
  createdAt    DateTime  @default(now()) @map("created_at")

  domainRoles  DomainRole[]
  tokens       VerificationToken[]
  authorizationCodes AuthorizationCode[]
  loginLogs    LoginLog[]
  ownedOrgs    Organisation[]   @relation("OrgOwner")
  orgMembers   OrgMember[]
  teamMembers  TeamMember[]
  groupMembers GroupMember[]

  @@index([email])
  @@index([domain])
  @@map("users")
}

model DomainRole {
  domain    String
  userId    String   @map("user_id")
  role      UserRole @default(USER)
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([domain, userId])
  @@index([userId])
  @@map("domain_roles")
}

model VerificationToken {
  id        String                @id @default(cuid())
  type      VerificationTokenType
  email     String
  userKey   String                @map("user_key")
  domain    String?
  configUrl String                @map("config_url")
  tokenHash String                @unique @map("token_hash")
  expiresAt DateTime              @map("expires_at")
  usedAt    DateTime?             @map("used_at")
  createdAt DateTime              @default(now()) @map("created_at")

  userId String? @map("user_id")
  user   User?   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([email])
  @@index([userKey])
  @@index([expiresAt])
  @@index([createdAt])
  @@map("verification_tokens")
}

model AuthorizationCode {
  id          String   @id @default(cuid())
  codeHash    String   @unique @map("code_hash")
  userId      String   @map("user_id")
  domain      String
  configUrl   String   @map("config_url")
  redirectUrl String   @map("redirect_url")
  expiresAt   DateTime @map("expires_at")
  usedAt      DateTime? @map("used_at")
  createdAt   DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([domain])
  @@index([expiresAt])
  @@index([createdAt])
  @@map("authorization_codes")
}

model LoginLog {
  id         String   @id @default(cuid())
  userId     String   @map("user_id")
  email      String
  domain     String
  authMethod String   @map("auth_method")
  ip         String?
  userAgent  String?  @map("user_agent")
  createdAt  DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([domain, createdAt])
  @@index([createdAt])
  @@map("login_logs")
}

model Organisation {
  id        String   @id @default(cuid())
  domain    String
  name      String   @db.VarChar(100)
  slug      String   @db.VarChar(120)
  ownerId   String   @map("owner_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  owner   User        @relation("OrgOwner", fields: [ownerId], references: [id], onDelete: Restrict)
  members OrgMember[]
  teams   Team[]
  groups  Group[]

  @@unique([domain, slug])
  @@index([domain])
  @@index([ownerId])
  @@map("organisations")
}

model OrgMember {
  id        String   @id @default(cuid())
  orgId     String   @map("org_id")
  userId    String   @map("user_id")
  role      String   @default("member")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  org  Organisation @relation(fields: [orgId], references: [id], onDelete: Cascade)
  user User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([orgId, userId])
  @@index([userId])
  @@map("org_members")
}

model Team {
  id          String   @id @default(cuid())
  orgId       String   @map("org_id")
  groupId     String?  @map("group_id")
  name        String   @db.VarChar(100)
  description String?  @db.VarChar(500)
  isDefault   Boolean  @default(false) @map("is_default")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  org     Organisation @relation(fields: [orgId], references: [id], onDelete: Cascade)
  group   Group?       @relation(fields: [groupId], references: [id], onDelete: SetNull)
  members TeamMember[]

  @@unique([orgId, name])
  @@index([orgId])
  @@index([groupId])
  @@map("teams")
}

model TeamMember {
  id        String   @id @default(cuid())
  teamId    String   @map("team_id")
  userId    String   @map("user_id")
  teamRole  String   @default("member") @map("team_role")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([teamId, userId])
  @@index([userId])
  @@map("team_members")
}

model Group {
  id          String   @id @default(cuid())
  orgId       String   @map("org_id")
  name        String   @db.VarChar(100)
  description String?  @db.VarChar(500)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  org     Organisation @relation(fields: [orgId], references: [id], onDelete: Cascade)
  teams   Team[]
  members GroupMember[]

  @@unique([orgId, name])
  @@index([orgId])
  @@map("groups")
}

model GroupMember {
  id        String   @id @default(cuid())
  groupId   String   @map("group_id")
  userId    String   @map("user_id")
  isAdmin   Boolean  @default(false) @map("is_admin")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([groupId, userId])
  @@index([userId])
  @@map("group_members")
}

// Brief 8.4 / Phase 10: AI translation fallback results must be cached permanently after generation.
model AiTranslation {
  language   String   @id
  // Hash of the source translation file used to generate this row (lets us regenerate if the source changes).
  sourceHash String   @map("source_hash")
  data       Json
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  @@index([sourceHash])
  @@map("ai_translations")
}
