generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  SUPERUSER
  USER
}

model User {
  id           String    @id @default(cuid())
  // Note: email is not globally unique because `user_scope` can be "per_domain".
  // Uniqueness is enforced via `user_key` instead (global: email, per_domain: domain|email).
  email        String
  userKey      String    @unique @map("user_key")
  domain       String?
  passwordHash String?   @map("password_hash")
  name         String?
  role         UserRole  @default(USER)
  twoFaEnabled Boolean   @default(false) @map("2fa_enabled")
  twoFaSecret  String?   @map("2fa_secret")
  avatarUrl    String?   @map("avatar_url")
  createdAt    DateTime  @default(now()) @map("created_at")

  @@index([email])
  @@index([domain])
  @@map("users")
}
