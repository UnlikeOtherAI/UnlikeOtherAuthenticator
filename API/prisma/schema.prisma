generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  SUPERUSER
  USER
}

enum VerificationTokenType {
  LOGIN_LINK
  VERIFY_EMAIL_SET_PASSWORD
  PASSWORD_RESET
  TWOFA_RESET
}

model User {
  id           String    @id @default(cuid())
  // Note: email is not globally unique because `user_scope` can be "per_domain".
  // Uniqueness is enforced via `user_key` instead (global: email, per_domain: domain|email).
  email        String
  userKey      String    @unique @map("user_key")
  domain       String?
  passwordHash String?   @map("password_hash")
  name         String?
  twoFaEnabled Boolean   @default(false) @map("2fa_enabled")
  twoFaSecret  String?   @map("2fa_secret")
  avatarUrl    String?   @map("avatar_url")
  createdAt    DateTime  @default(now()) @map("created_at")

  domainRoles  DomainRole[]
  tokens       VerificationToken[]
  authorizationCodes AuthorizationCode[]

  @@index([email])
  @@index([domain])
  @@map("users")
}

model DomainRole {
  domain    String
  userId    String   @map("user_id")
  role      UserRole @default(USER)
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([domain, userId])
  @@index([userId])
  @@map("domain_roles")
}

model VerificationToken {
  id        String                @id @default(cuid())
  type      VerificationTokenType
  email     String
  userKey   String                @map("user_key")
  domain    String?
  configUrl String                @map("config_url")
  tokenHash String                @unique @map("token_hash")
  expiresAt DateTime              @map("expires_at")
  usedAt    DateTime?             @map("used_at")
  createdAt DateTime              @default(now()) @map("created_at")

  userId String? @map("user_id")
  user   User?   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([email])
  @@index([userKey])
  @@index([expiresAt])
  @@index([createdAt])
  @@map("verification_tokens")
}

model AuthorizationCode {
  id          String   @id @default(cuid())
  codeHash    String   @unique @map("code_hash")
  userId      String   @map("user_id")
  domain      String
  configUrl   String   @map("config_url")
  redirectUrl String   @map("redirect_url")
  expiresAt   DateTime @map("expires_at")
  usedAt      DateTime? @map("used_at")
  createdAt   DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([domain])
  @@index([expiresAt])
  @@index([createdAt])
  @@map("authorization_codes")
}
