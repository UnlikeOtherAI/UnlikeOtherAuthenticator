generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  SUPERUSER
  USER
}

model User {
  id           String    @id @default(cuid())
  // Note: email is not globally unique because `user_scope` can be "per_domain".
  // Uniqueness is enforced via `user_key` instead (global: email, per_domain: domain|email).
  email        String
  userKey      String    @unique @map("user_key")
  domain       String?
  passwordHash String?   @map("password_hash")
  name         String?
  twoFaEnabled Boolean   @default(false) @map("2fa_enabled")
  twoFaSecret  String?   @map("2fa_secret")
  avatarUrl    String?   @map("avatar_url")
  createdAt    DateTime  @default(now()) @map("created_at")

  domainRoles  DomainRole[]

  @@index([email])
  @@index([domain])
  @@map("users")
}

model DomainRole {
  domain    String
  userId    String   @map("user_id")
  role      UserRole @default(USER)
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([domain, userId])
  @@index([userId])
  @@map("domain_roles")
}
